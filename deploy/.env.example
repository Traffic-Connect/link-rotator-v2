# ============================================
# Link Rotator - Environment Configuration
# FOR PRODUCTION (Hestia CP)
# ============================================

# Environment
NODE_ENV=production

# Server
PORT=3000

# Database - MongoDB (Local)
MONGODB_URI=mongodb://127.0.0.1:27017/link_rotator

# Cache - Redis (Local)
REDIS_URL=redis://127.0.0.1:6379

# Security - JWT
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-to-random-string

# Cache TTL (in seconds)
ROTATION_CACHE_TTL=3600

